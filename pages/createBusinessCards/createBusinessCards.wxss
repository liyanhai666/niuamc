/* 我的名片 */
.card-wrap {
  box-sizing: border-box;
  position: relative;
  margin-left: -8rpx;
  padding: 40rpx 60rpx;
  width: 706rpx;
  height: 334rpx;
}

.card-wrap-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
}

.card-wrap .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20rpx;
  line-height: 1;
}

.card-wrap .top .name {
  display: block;
  font-size: 36rpx;
  color: #000;
}

.card-wrap .top .position {
  display: block;
  margin-top: 4rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #666;
}

.card-wrap .top .position:after {
  display: block;
  content: "";
  margin-top: 10rpx;
  width: 70rpx;
  height: 2rpx;
  background-color: #ddd;
}

.card-wrap .top .logo {
  margin-right: 16rpx;
  width: 172rpx;
  height: 89rpx;
}

.card-wrap .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card-wrap .bottom .b-right {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.card-wrap .bottom .item {
  line-height: 36rpx;
}

.card-wrap .bottom .mb {
  margin-bottom: 20rpx;
}

.card-wrap .bottom .icon {
  display: inline-block;
  vertical-align: top;
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #91ca40;
  border-radius: 10rpx;
  text-align: center;
  line-height: 36rpx;
}

.card-wrap .bottom .icon-1 {
  width: 16rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-2 {
  width: 28rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-3 {
  width: 20rpx;
  height: 26rpx;
}

.card-wrap .bottom .txt {
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
  color: #666;
}

.card-wrap .bottom .qr-code {
  margin-right: 86rpx;
  width: 87rpx;
  height: 87rpx;
}

/* 我的名片 end */
/* form 表单 */
.form {
  margin-top: 30rpx;
  padding: 0 20rpx;
  background-color: #fff;
}

.form .item {
  justify-content: space-between;
  padding: 20rpx 0 22rpx;
  border-bottom: 1px #f2f2f2 solid;
}

.form .item .label {
  width: 100rpx;
  font-size: 30rpx;
  color: #333;
}

.form .item .input {
  font-size: 24rpx;
  color: #999;
}

.form .item .right .txt {
  font-size: 24rpx;
  color: #ccc;
}

.form .item .right .add {
  display: block;
  width: 24rpx;
  height: 24rpx;
}

.form .item .right .btn {
  position: relative;
  font-size: 24rpx;
  color: #d73037;
}

/* 修改checkbox样式 */
checkbox .wx-checkbox-input {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50% !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #d73037;
  border-radius: 50% !important;
  border-color: #d73037;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50% !important;
  line-height: 34rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.checkboxGroup {
  flex-wrap: wrap;
  margin-top: 40rpx;
  margin-bottom: 18rpx;
}

.checkboxGroup .checkbox {
  box-sizing: border-box;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  width: 50%;
  font-size: 30rpx;
  color: #000;
}

/* 修改checkbox样式 end */
/* 提交按钮 */
.submit {
  margin: 0 auto;
  width: 560rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: -webkit-linear-gradient(left, #d73037, #ff5a45);
}