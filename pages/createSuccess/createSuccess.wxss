.container {
  padding: 80rpx 30rpx 126rpx;
}

/* 头部 */
.header {
  margin-bottom: 72rpx;
  text-align: center;
  color: #343434;
}

.header .icon {
  display: inline-block;
  width: 227rpx;
  height: 87rpx;
}

.header .h1,
.header .txt {
  display: block;
}

.header .h1 {
  margin-top: 30rpx;
  font-size: 48rpx;
}

.header .txt {
  margin-top: 18rpx;
  font-size: 28rpx;
}

/* 我的名片 */
.card-wrap {
  box-sizing: border-box;
  position: relative;
  margin-left: -8rpx;
  padding: 40rpx 60rpx;
  width: 706rpx;
  height: 334rpx;
}

.card-wrap-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
}

.card-wrap .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20rpx;
  line-height: 1;
}

.card-wrap .top .name {
  display: block;
  font-size: 36rpx;
  color: #000;
}

.card-wrap .top .position {
  display: block;
  margin-top: 4rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #666;
}

.card-wrap .top .position:after {
  display: block;
  content: "";
  margin-top: 10rpx;
  width: 70rpx;
  height: 2rpx;
  background-color: #ddd;
}

.card-wrap .top .logo {
  margin-right: 16rpx;
  width: 172rpx;
  height: 89rpx;
}

.card-wrap .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card-wrap .bottom .b-right {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.card-wrap .bottom .item {
  line-height: 36rpx;
}

.card-wrap .bottom .mb {
  margin-bottom: 20rpx;
}

.card-wrap .bottom .icon {
  display: inline-block;
  vertical-align: top;
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #91ca40;
  border-radius: 10rpx;
  text-align: center;
  line-height: 36rpx;
}

.card-wrap .bottom .icon-1 {
  width: 16rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-2 {
  width: 28rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-3 {
  width: 20rpx;
  height: 26rpx;
}

.card-wrap .bottom .txt {
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
  color: #666;
}

.card-wrap .bottom .qr-code {
  margin-right: 86rpx;
  width: 87rpx;
  height: 87rpx;
}

/* 我的名片 end */

/* 按钮组 */
.btn-group {
  position: absolute;
  bottom: 56rpx;
  left: 30rpx;
  right: 30rpx;
  justify-content: space-between;
  padding: 0 20rpx;
}

.btn-group .btn {
  width: 300rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  font-size: 36rpx;
  color: #000;
  text-align: center;
  line-height: 80rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(0, 0, 0, 0.05);
}

.btn-group .type-1 {
  position: relative;
  z-index: 20;
  color: #fff;
  background: -webkit-linear-gradient(left, #d73037, #ff5a45);
  box-shadow: 0 10rpx 20rpx 0 rgba(215, 48, 55, 0.2);
}

/* 新增遮罩 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.mask .text {
  position: absolute;
  left: 50%;
  bottom: 190rpx;
  margin-left: -320rpx;
  display: block;
  box-sizing: border-box;
  padding: 20rpx 26rpx;
  width: 640rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 1.2;
  color: #000;
  background-color: #fff;
}

.mask .arrow {
  display: block;
  position: absolute;
  right: 144rpx;
  bottom: -42rpx;
  width: 16rpx;
  height: 45rpx;
}