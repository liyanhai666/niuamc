/* 联系方式 */
.contact-information {
  margin-top: 30rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  border-radius: 6px;
}

.contact-information .title {
  font-size: 36rpx;
  color: #333;
}

.contact-information .icon-list {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 40rpx;
}

.contact-information .icon-item {
  position: relative;
  width: 74rpx;
  height: 74rpx;
  background-color: #f2f2f2;
  border-radius: 50%;
  text-align: center;
  line-height: 74rpx;
}

.contact-information .icon-item .arrow {
  display: none;
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  margin-left: -10rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: #fdf4f5;
  transform: rotate(45deg);
}

.contact-information .icon-item.active {
  background-color: #fdf4f5;
}

.contact-information .icon-item.active .arrow {
  display: block;
}

.contact-information .icon-list .icon-item .iconfont {
  font-size: 20px;
}

.contact-information .icon-item image {
  width: 50rpx;
  height: 50rpx;
}

.contact-information .content-list {
  margin-top: 16rpx;
}

.contact-information .content-list .content-item {
  display: none;
  padding: 0 30rpx 0 25rpx;
  min-height: 108rpx;
  background-color: #fdf4f5;
  border-radius: 6rpx;
}

.contact-information .content-list .content-item.active {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.contact-information .content-list .content-item .txt {
  max-width: 80%;
  font-size: 30rpx;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
}

.contact-information .content-list .content-item .btn {
  margin-left: 12rpx;
  font-size: 24rpx;
  color: #ff5a45;
  text-decoration: underline;
}

/* logo */
.logo {}

.logo image {
  display: block;
  margin: 30rpx auto 0;
  width: 253rpx;
  height: 37rpx;
}

/* 禁止点击 */
.disabled {
  opacity: 0.3;
}

