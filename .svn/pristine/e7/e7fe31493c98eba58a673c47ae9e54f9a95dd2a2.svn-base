/* 我的名片 */
.card-wrap {
  box-sizing: border-box;
  position: relative;
  margin-left: -8rpx;
  padding: 40rpx 60rpx;
  width: 706rpx;
  min-height: 334rpx;
}

.card-wrap-bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  display: block;
  width: 100%;
  height: 100%;
}

.card-wrap .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-bottom: 20rpx;
  line-height: 1;
}

.card-wrap .top .name {
  display: block;
  font-size: 36rpx;
  color: #000;
}

.card-wrap .top .position {
  display: block;
  margin-top: 4rpx;
  font-size: 24rpx;
  line-height: 1;
  color: #666;
}

.card-wrap .top .position:after {
  display: block;
  content: "";
  margin-top: 10rpx;
  width: 70rpx;
  height: 2rpx;
  background-color: #ddd;
}

.card-wrap .top .logo {
  margin-right: 16rpx;
  width: 172rpx;
  height: 89rpx;
}

.card-wrap .top .corporate-name {
  font-size: 36rpx;
  color: #000;
}

.card-wrap .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.card-wrap .bottom .b-right {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.card-wrap .bottom .item {
  line-height: 36rpx;
}

.card-wrap .bottom .mb {
  margin-bottom: 20rpx;
}

.card-wrap .bottom .icon {
  display: inline-block;
  vertical-align: top;
  margin-right: 16rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: #91ca40;
  border-radius: 10rpx;
  text-align: center;
  line-height: 36rpx;
}

.card-wrap .bottom .wx {
  background-color: #333;
}

.card-wrap .bottom .icon-1 {
  width: 16rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-2 {
  width: 28rpx;
  height: 24rpx;
}

.card-wrap .bottom .icon-3 {
  width: 20rpx;
  height: 26rpx;
}

.card-wrap .bottom .txt {
  display: inline-block;
  vertical-align: top;
  max-width: 14em;
  font-size: 24rpx;
  color: #666;
}

.card-wrap .bottom .qr-code {
  margin-right: 86rpx;
  width: 87rpx;
  height: 87rpx;
}

/* 我的名片 end */