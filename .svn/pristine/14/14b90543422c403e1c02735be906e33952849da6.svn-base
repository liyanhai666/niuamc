/* 导入fonts */
@import '../../assets/fonts/iconfont.wxss';

/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
}

.nav-content {
  position: relative;
  height: 46px;
}

/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  line-height: 46px;
  color: #2c2b2b;
  font-weight: 600;
}

.nav-icon {
  position: absolute;
  left: 20rpx;
  top: 0;
  height: 46px;
}

.nav-icon .icon-item {
  display: inline-block;
  height: 46px;
  line-height: 46px;
}

.iconfont {
  padding: 10rpx;
  font-size: 36rpx;
  font-weight: 600;
}